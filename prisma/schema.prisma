generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      String   @default("user")
  password  String
  orders    Order[]
  passwordResets PasswordReset[]
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}

model Product { 
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  price       Float
  description String @db.Text

  images      Json
  sizes       Json
  colors      Json

  weight      Float?   // kg
  height      Float?   // cm
  width       Float?   // cm
  length      Float?   // cm

  active      Boolean  @default(true)
  featured    Boolean  @default(false)
  bestSeller  Boolean  @default(false)
  stock       Int

  // ðŸ”¹ RELAÃ‡ÃƒO COM CATEGORIA (SEGURA)
  categoryId String?        // ðŸ‘ˆ opcional por enquanto
  category   Category? @relation(fields: [categoryId], references: [id])

  variations  Variation[]
  reviews     Review[]
  orders      OrderItem[]

  createdAt   DateTime @default(now())
}

model Category {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  image     String?
  active    Boolean  @default(true)

  products  Product[]
  Banners    Banner[]
  createdAt DateTime @default(now())
}

model Order {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])

  total     Float
  status    String   @default("pending")
  tracking  String?
  items     OrderItem[]

  createdAt DateTime @default(now())
  shippingAddress String?
  shippingPrice   Float?
  stripeSessionId String? @unique
}

enum OrderStatus {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

model OrderItem {
  id        String   @id @default(cuid())

  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])

  productId String?
  product   Product? @relation(fields: [productId], references: [id])
  
  name      String
  quantity  Int
  price     Float
  size      String?
  color     String?
  isFrete   Boolean @default(false)
}



model Variation {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])

  color     String?
  size      String?
  stock     Int
  priceDiff Float    @default(0)
}

model Review {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])

  name      String
  rating    Int
  comment   String

  createdAt DateTime @default(now())
}

model Banner {
  id        String   @id @default(cuid())
  title     String
  image     String
  link      String?
  order     Int      @default(0)
  active    Boolean  @default(true)
  categoryId String        
  category   Category @relation(fields: [categoryId], references: [id])
  createdAt DateTime @default(now())
}

model NewsletterEmail {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

